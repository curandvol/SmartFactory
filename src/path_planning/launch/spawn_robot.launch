<launch>
  <!-- URDF + TF 퍼블리시: robot_description.launch가 다 처리 -->
  <include file="$(find path_planning)/launch/robot_description.launch"/>

  <!-- Gazebo에 로봇 스폰 (단 한 번만!) -->
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" output="screen"
        args="-param robot_description -urdf -model my_robot -x 0 -y 0 -z 0.1" />
</launch>

